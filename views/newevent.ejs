  <%- renderScriptsTags(scripts) %>
  <script type="text/javascript">
  $(function() {
    $('#datetimepicker1, #datetimepicker2').datetimepicker({
      language: 'en',
      weekStart: 1,
      pickSeconds: false
    });
  });
</script>
  </head>
  <body>
  <div class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
                <div class="container"><!-- Collapsable nav bar -->
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>

                    <!-- Your site name for the upper left corner of the site -->
                    <a class="brand" href="/"><img src="/static/img/logo.png" width="10" /> Events app generator</a>

                    <!-- Start of the nav bar content -->
                    <div class="nav-collapse"><!-- Other nav bar content -->

                        
                        

                        <!-- The drop down menu -->
                        <ul class="nav pull-right">
                            
                                <li>
                                    <a href="">
                                        Welcome, <%= user %>
                                    </a>
                                </li>
                                <li class="divider-vertical"></li>
                                <li>
                                    <a href="/logout/">
                                        Logout
                                    </a>
                                </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
  <div id="main-container" class="container">
  <div class="row-fluid">
  <div class="span3"></div>
  <div class="span7">
 <form class="form-horizontal" id='signupform' action='../add' method="POST">
  <fieldset>
    <div id="legend">
      <legend class="">Add new event</legend>
    </div>
    <div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <b>Reminder:</b> the app info is automatically generated (empty). Updating those data is critical.
    </div>
    <div class="control-group">
      <!-- Username -->
      <label class="control-label"  for="fullname">Event name: *</label>
      <div class="controls">
        <input type="text" id="fullname" name="fullname" value="" placeholder="" class="required input-xlarge">
        <p class="help-block">The id will be the name without uppercase and no spaces</p>
      </div>
    </div>

    <div class="control-group">
      <!-- E-mail -->
      <label class="control-label" for="descr">Description: *</label>
      <div class="controls">
        <textarea rows="5" id="descr" name="descr" value="" placeholder="" class="required input-xlarge"></textarea>
        <p class="help-block">What is the event about? You can upload the timetable later</p>
      </div>
    </div>

    <div class="control-group">
      <!-- E-mail -->
      <label class="control-label" for="sdate">Start date: *</label>
      <div class="controls">
        <div id="datetimepicker1" class="input-append date">
          <input data-format="yyyy-MM-dd hh:mm" type="text" name="sdate"></input>
        <span class="add-on">
          <i data-time-icon="icon-time" data-date-icon="icon-calendar">
          </i>
        </span>
      </div>
       <!--<input type="text" id="sdate"  name="sdate" value="" placeholder="" class="required input-xlarge">-->
        <p class="help-block">Click the calendar, choose date and time.</p>
      </div>
    </div>

    <div class="control-group">
      <!-- E-mail -->
      <label class="control-label" for="edate">End date: *</label>
      <div class="controls">
         <div id="datetimepicker2" class="input-append date">
          <input data-format="yyyy-MM-dd hh:mm" type="text" name="edate"></input>
        <span class="add-on">
          <i data-time-icon="icon-time" data-date-icon="icon-calendar">
          </i>
        </span>
      </div>
        <!--<input type="text" id="edate" name="edate" value="" placeholder="" class="required input-xlarge">-->
        <p class="help-block">Same behavior as before</p>
      </div>
    </div>


    <div class="control-group">
      <!-- E-mail -->
      <label class="control-label" for="location">Location: *</label>
      <div class="controls">
        <input type="text" id="location" name="location" value="" placeholder="" class="required input-xlarge">
        <p class="help-block">City, (state/province/region), country</p>
      </div>
    </div>
    <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <button class="btn btn-success">Submit</button>
      </div>
    </div>
</div>  
<input type="hidden" name="_csrf" value="<%= token %>">
</fieldset>
</form>
</div>
</div>
</div>
</div>
<footer>
    <img id="logo-left" src="/static/img/morelab.png" width="150" />
    <img id="logo-right" src="/static/img/deustotech.png" width="150" />
  </footer>
  </body>
</html>