<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel='stylesheet' href='/stylesheets/bootstrap.css' />
	<link rel='stylesheet' href='/stylesheets/bootstrap-responsive.css' />
  <% scripts.push('jquery-1.9.1.min.js', 'jquery.validate.js', 'signupform.js', 'bootstrap.js') %>
  <%- renderScriptsTags(scripts) %>
  </head>
  <body>	
  <div class="span5"></div>
  <div class="span11">
  <div id="legend">
    <legend>Your app list, <%=username %></legend>
  </div>
  <!--<p class="lead">Your app list, <%= username %></p>-->
  <table class="table table-striped table-bordered">
	  <thead>
      <tr>
          <th class="span3">Event</th>
          <th class="span6">Description</th>
          <th class="span2">Start Date</th>
          <th class="span2">End date</th>
          <th class="span2">Location</th>
          <th>Actions</th>
      </tr>
  </thead>   
  <tbody>
  	 <% for(var i=0; i < events.length; i++) { %>
     <tr>
        <td class="span3"><a href="/event/<%= events[i].ename %>"><%= events[i].fullname %></a></td>
        <td class="span6"><%= events[i].descr %></td>
        <td class="span2"><%= events[i].sdate.getUTCFullYear() %>-<%= ('0' + (events[i].sdate.getUTCMonth() + 1)).slice(-2) %>-<%= ('0' + events[i].sdate.getUTCDate()).slice(-2) %> <%= ('0' + events[i].sdate.getHours()).slice(-2) %>:<%= ('0' + events[i].sdate.getMinutes()).slice(-2) %></td>
        <td class="span2"><%= events[i].edate.getUTCFullYear() %>-<%= ('0' + (events[i].edate.getUTCMonth() + 1)).slice(-2) %>-<%= ('0' + events[i].edate.getUTCDate()).slice(-2) %> <%= ('0' + events[i].edate.getHours()).slice(-2) %>:<%= ('0' + events[i].edate.getMinutes()).slice(-2) %></td>
        <td class="span2"><%= events[i].location %></td>
        <td>
          <a href="/event/edit/<%=events[i].ename %>"><i class="icon-pencil"></i></a>
          <a href="/event/delete/<%=events[i].ename %>" role="button" data-toggle="modal"><i class="icon-remove"></i></a>
        </td>
     </tr> 
    <% } %>
  </tbody>
</table>
<div class="btn-toolbar">
    <a class="btn btn-primary" href="/event/new/">New Event</a>
</div>
</div>
</div>
  </body>
</html>