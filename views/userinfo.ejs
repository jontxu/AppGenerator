<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap-responsive.min.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap-responsive.css' />
    <% scripts.push('/javascripts/jquery-1.9.1.min.js', '/javascripts/jquery.validate.js', '/javascripts/signupform.js', '/javascripts/bootstrap.js') %>
    <%- renderScriptsTags(scripts) %>
  </head>
  <body>
   <div class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
                <div class="container"><!-- Collapsable nav bar -->
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>

                    <!-- Your site name for the upper left corner of the site -->
                    <a class="brand" href="/">PhoneGap events app generator</a>

                    <!-- Start of the nav bar content -->
                    <div class="nav-collapse"><!-- Other nav bar content -->

                        
                        

                        <!-- The drop down menu -->
                        <ul class="nav pull-right">
                            
                                <li>
                                    <a href="">
                                        Welcome, <%= user %>
                                    </a>
                                </li>
                                <li class="divider-vertical"></li>
                                <li>
                                    <a href="/logout/">
                                        Logout
                                    </a>
                                </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
  <div id="main-container" class="container">
  <div class="row-fluid">
  <div class="span3"></div>
    <div class="span6">
      <div id="legend">
        <legend class="">General information of user: <%= us.realname %></legend>
      </div>

      <b>Username:</b>
      <p><%= us.uname %></a></p>

      <b>User email:</b>
      <p><a href="mailto:<%= us.email %>"><%= us.email %></a></p>

      <b>Organization he/she belongs to:</b>
      <p><%= us.org %></p>

      <p><b>Events registered by this user:</b></p>
      <% if (ev.length == 0) { %>
        <p>This user has not registered any event yet</p>
      <% } else { %>
      <table class="table table-striped table-bordered table-condensed">
      <thead>
      <tr>
          <th class="span2">Event</th>
          <th>Description</th>
          <th>Actions</th>
      </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < ev.length; i++) { %>
          <tr>
          <td class="span2"><a href="/event/<%= ev[i].ename %>"><%= ev[i].fullname %></a></td>
          <td><%= ev[i].descr %></td>
          <td>
            <a href="/event/edit/<%=ev[i].ename %>"><i class="icon-edit"></i></a>
            <a href="/event/delete/<%=ev[i].ename %>" role="button" data-toggle="modal"><i class="icon-remove"></i></a>
          </td>
        </tr> 
        <% } %>
      </tbody>
      </table>
      <% } %>
      <div class="btn-toolbar">
        <td class="span2">
          <a class="btn btn-primary" href="/user/edit/<%= us.uname %>"><i class="icon-edit icon-white"></i> Edit info</a>
          <a class="btn btn-danger" href="/user/delete/<%= us.uname %>"><i class="icon-remove icon-white"></i> Delete</a>
        </td>
      </div>
    </div>
  </div>
  </div>
  </div>
    <footer>
      <img id="logo-left" src="/static/img/morelab.png" width="150" />
      <img id="logo-right" src="/static/img/deustotech.png" width="150" />
  </footer>
  </body>
</html>