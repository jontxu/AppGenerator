<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap-responsive.min.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap-responsive.css' />
    <% scripts.push('jquery-1.9.1.min.js', 'jquery.validate.js', 'signupform.js', 'bootstrap.js', 'googlemaps.js?v=3.exp&sensor=false', 'map.js') %>
    <%- renderScriptsTags(scripts) %>
  </head>
  <body>
    <div class="span3"></div>
    <div class="span6">
      <div id="legend">
        <legend class="">User: <%= us.realname %></legend>
      </div>

      <b>Username:</b>
      <p><%= us.uname %></a></p>

      <b>User email:</b>
      <p><a href="mailto:<%= us.email %>"><%= us.email %></a></p>

      <b>Organization he belongs to:</b>
      <p><%= us.org %></p>

      <p><b>Events by this user/organization:</b></p>
      <% if (ev.length == 0) { %>
        <p>This user has not registered any event yet</p>
      <% } else { %>
      <table class="table table-striped table-bordered table-condensed">
      <thead>
      <tr>
          <th>Event</th>
          <th>Description</th>
          <th>Actions</th>
      </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < ev.length; i++) { %>
          <tr>
          <td><a href="/event/<%= ev[i].ename %>"><%= ev[i].fullname %></a></td>
          <td><%= ev[i].descr %></td>
          <td>
            <a href="/event/edit/<%=ev[i].ename %>"><i class="icon-edit"></i></a>
            <a href="/event/delete/<%=ev[i].ename %>" role="button" data-toggle="modal"><i class="icon-remove"></i></a>
          </td>
        </tr> 
        <% } %>
      </tbody>
      </table>
      <% } %>
      <br/>
      <td class="span2">
        <a class="btn btn-primary" href="/user/edit/<%= us.uname %>"><i class="icon-edit icon-white"></i> Edit info</a>
        <a class="btn btn-success" href="/user/delete/<%= us.uname %>"><i class="icon-remove icon-white"></i> Delete</a>
      </td>
      </div>
    </div>
  </body>
</html>