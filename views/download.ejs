      <b>Or use this download link instead:</b> 
      <br/>
      <a href="<%= url %>">Download</a>
      <br/>
      <div class="btn-toolbar">
        <td class="span3">
          <a class="btn btn-primary" href="javascript:history(-1);"><i class="icon-arrow-left icon-white"></i> Back</a>
        </td>
      </div>
    </div>
  </div>
</div>
<footer>
    <img id="logo-left" src="/static/img/morelab.png" width="150" />
    <img id="logo-right" src="/static/img/deustotech.png" width="150" />
  </footer>
  </body>
</html>